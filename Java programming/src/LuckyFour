import java.util.*;
class codechef
{
    public static void main(String[] args)
    {
     Scanner sc = new Scanner(System.in);
     int n = sc.nextInt();
     int oc[] = new int [n];
     String s = new String();
     for(int i=0;i<n;i++)
     {
      s = sc.next();
      for(int j=0;j<s.length();j++)
      {
       if(s.charAt(j)==52)
       {
        oc[i]++;
       }
      }
     }
     for(int i=0;i<n;i++)
     {
        System.out.println(oc[i]);
     }
    }
}
